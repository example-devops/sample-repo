const express = require('express');
const cors = require('cors');
const path = require('path');

const logger = require('./middleware/logger');

const app = express();
const port = 3000;

app.use(cors());
app.use(logger);

// Serve frontend files
app.use(express.static(path.join(__dirname, 'public')));

// Fortunes array
const fortunes = [
  "ðŸŒŸ You will do something amazing today!",
  "ðŸ’¡ A new idea will lead you to success.",
  "ðŸ€ Luck is on your side â€“ go for it!",
  "ðŸ§  Wisdom will come from an unexpected place.",
  "ðŸŽ¯ Your focus will bring great results.",
  "ðŸŒˆ Happiness begins with a choice â€“ choose joy!",
  "ðŸš€ Great adventures are just ahead!"
];

// API route
app.get('/api/fortune', (req, res) => {
  const fortune = fortunes[Math.floor(Math.random() * fortunes.length)];
  res.json({ fortune });
});

app.listen(port, () => {
  console.log(`Server running at http://localhost:${port}`);
});
