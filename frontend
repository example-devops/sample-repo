  <h1>ðŸ¥  Click the Cookie for a Fortune</h1>
  <div class="cookie" onclick="getFortune()"></div>
  <div class="fortune" id="fortuneText"></div>

  <script>
    async function getFortune() {
      try {
        const res = await fetch('/api/fortune');
        const data = await res.json();
        const fortuneDiv = document.getElementById('fortuneText');
        fortuneDiv.textContent = data.fortune;
        fortuneDiv.style.display = 'block';
      } catch (err) {
        console.error('Failed to fetch fortune:', err);
      }
    }
  </script>

